{
  "name": "Task Manager - Sistema Colaborativo",
  "short_name": "TaskManager",
  "description": "Sistema colaborativo de gerenciamento de tarefas com transparência total e tempo real",
  "version": "1.0.0",
  "start_url": "/",
  "scope": "/",
  "display": "standalone",
  "orientation": "portrait-primary",
  "theme_color": "#3B82F6",
  "background_color": "#F9FAFB",
  "lang": "pt-BR",
  "dir": "ltr",
  "categories": [
    "productivity",
    "business",
    "collaboration",
    "utilities"
  ],
  "icons": [
