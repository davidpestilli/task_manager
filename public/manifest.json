    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Acessar dashboard pessoal com métricas",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Projetos",
      "short_name": "Projetos",
      "description": "Ver todos os projetos",
      "url": "/projects",
      "icons": [
        {
          "src": "/icons/shortcut-projects.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Nova Tarefa",
      "short_name": "Nova Tarefa",
      "description": "Criar uma nova tarefa",
      "url": "/tasks/new",
      "icons": [
        {
          "src": "/icons/shortcut-task.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Notificações",
      "short_name": "Notificações",
      "description": "Ver notificações recentes",
      "url": "/notifications",
      "icons": [
        {
          "src": "/icons/shortcut-notifications.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/screenshots/desktop-dashboard.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Dashboard principal com métricas e projetos"
    },
    {
      "src": "/screenshots/mobile-tasks.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Lista de tarefas em dispositivo móvel"
    },
    {
      "src": "/screenshots/desktop-flow.png",
      "sizes": "1280x720",
      "type": "image/png",
      "platform": "wide",
      "label": "Visualização de dependências em fluxograma"
    },
    {
      "src": "/screenshots/mobile-people.png",
      "sizes": "390x844",
      "type": "image/png",
      "platform": "narrow",
      "label": "Gestão de pessoas e tarefas"
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://taskmanager.app"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "protocol_handlers": [
    {
      "protocol": "web+taskmanager",
      "url": "/task?id=%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "permissions": [
    "notifications"
  ],
  "features": [
    "cross-origin-isolated"
  ]
}